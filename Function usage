theRealCups = [' ','O',' ']
# 9.5 Here is the list of cups, the ball starts out under cup #2
theRealCups = [' ','O',' ']
# 9.6 Define Function1
def shuffleThisListFn1(thisList):
    # Take in list, and returned shuffle versioned
    shuffle(thisList)
    
    return thisList
# 9.7 Review them before the shuffle
theRealCups
# 9.8 Shuffle and review again
shuffleThisListFn1(theRealCups)
theRealCups
# 9.9 Get a player's guess
def playerGuessFn2():
    guess = ''
    while guess not in ['0','1','2']:
        # Recall input() returns a string
        guess = input("Pick a number: 0, 1, or 2:  ")
    return int(guess)    
# 9.10 Get a player's guess
playerGuessFn2()
# 9.11 Test the player's guess
def GuessCheckFn3(myList, guess):
    if myList[guess] == 'O':
        print('Correct Guess!')
    else:
        print('Wrong! Better luck next time')
        print(myList)
# 9.12 Now lets run them all
actualCups = [' ','O',' ']

# Shuffle It
shuffledCups = shuffleThisListFn1(actualCups)
# Get User's Guess
thisGuess = playerGuessFn2()
# Check User's Guess
# ------------------------
# Notice this function takes parameters that ar results of other functions
GuessCheckFn3(shuffledCups, thisGuess)
# 9.12 Now lets run them all
actualCups = [' ','O',' ']

# Shuffle It
shuffledCups = shuffleThisListFn1(actualCups)
# Get User's Guess
thisGuess = playerGuessFn2()
# Check User's Guess
# ------------------------
